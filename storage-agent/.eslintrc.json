{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {

        // using process features on nodejs is expected
        "no-process-exit": "off",
        "no-process-env": "off"

    }
}
